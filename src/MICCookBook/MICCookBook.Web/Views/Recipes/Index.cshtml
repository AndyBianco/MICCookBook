@model List<MICCookBook.Web.Models.Recipe>

@{
    ViewBag.Title = "Index";
}

<!-- Portfolio Grid Section -->
<div id="portfolio">
    <div class="container">

        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Portfolio</h2>
                <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-sm-6 portfolio-item">
                <a href="/recipes/create" class="portfolio-link">
                    <div class="portfolio-hover">
                        <div class="portfolio-hover-content">
                            <i class="fa fa-plus fa-3x"></i>
                        </div>
                    </div>
                    <img src="/content/img/header.jpg" class="img-responsive" alt="">
                </a>
                <div class="portfolio-caption">
                    <h4>Publiez VOTRE recette !</h4>
                    <p class="text-muted">by @(User.Identity.IsAuthenticated ? User.Identity.Name : "Anonyme")</p>
                </div>
            </div>
            @foreach (var recipe in Model)
            {
                <div class="col-md-4 col-sm-6 portfolio-item">
                    <a href="/recipes/@recipe.Id" class="portfolio-link">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-eye fa-3x"></i>
                            </div>
                        </div>
                        <img src="/content/img/recipes/@recipe.Picture" class="img-responsive" alt="">
                    </a>
                    <div class="portfolio-caption">
                        <h4>@recipe.Title</h4>
                        <p class="text-muted">by @recipe.Author.UserName</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>